<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:gravity="center"
>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:background="#3F51B5">
        <ImageButton
                android:id="@+id/draw_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/draw" app:tint="#FFFFFF" android:background="#00FFFFFF"
                android:scaleX="0.75" android:scaleY=".75"/>
        <ImageButton
                android:id="@+id/highlight_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/highlight" android:background="#00FFFFFF" app:tint="#FFFFFF"
                android:scaleY="0.75" android:scaleX="0.75"/>
        <ImageButton
                android:id="@+id/erase_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/erase" app:tint="#FFFFFF" android:background="#00FFFFFF"
                android:scaleX="0.75" android:scaleY="0.75"/>
        <ImageButton
                android:id="@+id/redo_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/redo"
                app:tint="#FFFFFF" android:background="#00FFFFFF" android:scaleX="0.6" android:scaleY="0.6"
                android:layoutDirection="rtl"/>
        <ImageButton
                android:id="@+id/undo_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/undo"
                app:tint="#FFFFFF" android:background="#00FFFFFF" android:scaleX="0.6" android:scaleY="0.6"
                android:layoutDirection="rtl"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:background="#3F51B5">
        <ImageButton
                android:id="@+id/prev_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/prev"
                app:tint="#FFFFFF" android:background="#00FFFFFF" android:scaleX="0.75" android:scaleY="0.75"
                android:layoutDirection="rtl" android:rotation="90"/>
        <ImageButton
                android:id="@+id/next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next"
                app:tint="#FFFFFF" android:background="#00FFFFFF" android:scaleX="0.75" android:scaleY="0.75"
                android:layoutDirection="rtl" android:rotation="90"/>
        <TextView
                android:id="@+id/page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="PAGE NUMBER TEXT" android:text="PAGE NUMBER TEXT" android:layout_margin="10dp"
                android:visibility="visible" tools:visibility="visible" android:layout_gravity="bottom"
                android:height="100dp" android:textColor="@color/white" android:textStyle="bold"
                android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:background="#1A237E" android:isScrollContainer="false" android:paddingLeft="10dp"
                android:paddingRight="10dp" android:paddingTop="10dp" android:paddingBottom="3dp"
                android:paddingEnd="10dp"
                android:textStyle="bold"
                android:paddingStart="12dp" android:textAllCaps="false"
                android:textAlignment="center" android:textColor="@color/white" android:text="FILENAME TEXT"
                tools:text="FILENAME TEXT" android:textSize="24sp" android:textIsSelectable="false"/>
        <LinearLayout
                android:id="@+id/pdfLayout"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintBottom_toBottomOf="@id/page"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="655dp"
                android:layout_height="315dp"
                android:orientation="vertical"
                android:layout_gravity="fill_vertical">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>